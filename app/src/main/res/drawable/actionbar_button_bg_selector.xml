<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_focused="false">
        <shape android:shape="oval">
            <solid android:color="@color/top_bar_background2"/>
            <stroke android:color="@color/top_bar_background2" android:width="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/button_corner" />
            <stroke android:color="@color/top_bar_background2" android:width="4dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="false">
        <shape android:shape="oval">
            <solid android:color="#00000000"/>
            <stroke android:color="#00000000" android:width="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke android:color="#00000000" android:width="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/button_background_pressed" />
            <stroke android:color="@color/button_corner" android:width="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/button_corner" />
            <stroke android:color="@color/button_corner" android:width="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/top_bar_background" />
            <stroke android:color="@color/top_bar_background" android:width="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>