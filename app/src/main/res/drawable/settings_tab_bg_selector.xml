<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="0" android:exitFadeDuration="500">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/settings_tab_color_activated" />
                </shape>
            </item>
            <item android:gravity="bottom">
                <shape>
                    <size android:height="2dp" />
                    <solid android:color="@color/settings_tab_activated_underline_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_tab_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_tab_color_focused" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/settings_tab_color" />
        </shape>
    </item>
</selector>