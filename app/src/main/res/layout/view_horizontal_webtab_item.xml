<?xml version="1.0" encoding="utf-8"?>
<com.android.trowser.widgets.CheckableContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/web_tab_width"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:nextFocusUp="@+id/ibMenu"
    android:nextFocusDown="@+id/ibCloseTab"
    android:paddingStart="@dimen/web_tab_padding"
    android:paddingEnd="@dimen/web_tab_padding"
    android:background="@drawable/webtab_horizontal_bkg_selector">
    <ImageView
        android:id="@+id/ivFavicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/ic_launcher"
        android:scaleType="fitCenter"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/ivFavicon"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:textColor="@color/webtab_horizontal_text_selector"
        android:textSize="20sp"
        tools:text="@string/app_name" />
</com.android.trowser.widgets.CheckableContainer>